---
import Layout from '../../layouts/Layout.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import { projects } from '../../data/projects';

export function getStaticPaths() {
  return projects.map(project => ({
    params: { slug: project.slug },
    props: project
  }));
}

const { title, description, image, tags, content } = Astro.props;
---

<Layout title={title}>
  <div class="absolute inset-0 bg-gradient-hero -z-10"></div>
  <article class="container max-w-5xl mx-auto px-4 pt-32">
    <div class="max-w-5xl mx-auto stagger-children">
      <div class="rounded-xl overflow-hidden mb-8">
        <img
          src={image}
          alt={title}
          class="w-full aspect-video object-cover"
        />
      </div>
      
      <div>
        <h1 class="text-4xl font-bold mb-4 text-foreground">{title}</h1>
        <p class="text-xl text-muted-foreground mb-6">{description}</p>
        
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag) => (
            <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>

        <ShareButtons title={title} />
        
        <div class="prose prose-lg prose-invert max-w-none mt-12">
          {content}
        </div>
      </div>
    </div>
  </article>
</Layout>